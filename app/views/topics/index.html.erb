<p id="notice"><%= notice %></p>

<h1>Listing Topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
    <div class="panel-body">
    <tr>
      <td><%= topic.title %></td>
      <td><%= topic.description %></td>
    </tr>
    </div>
    <div>
      <tr>
        
        <td><%= link_to 'Show', topic , :class => "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic) , :class => "btn btn-default" %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-default" %></td>
      </tr>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_topic_path,  :class => "btn btn-danger" %>
